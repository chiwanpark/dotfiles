{
    "title": "Karabiner-Elements Complex Modifications by Chiwan Park",
    "rules": [{
        "description": "Change super key from command to control",
        "manipulators": [{
            "type": "basic",
            "from": {"key_code": "left_control", "modifiers": {"optional": ["any"]}},
            "to": [{"key_code": "left_gui"}],
            "conditions": [{"type": "frontmost_application_unless", "bundle_identifiers": ["com.googlecode.iterm2"]}]
        }]
    }, {
        "description": "Use Command+Number to switch workspace",
        "manipulators": [{
            "type": "basic",
            "from": {"key_code": "1", "modifiers": {"mandatory": ["left_gui"]}},
            "to": {"key_code": "1", "modifiers": ["left_control"]}
        }, {
            "type": "basic",
            "from": {"key_code": "2", "modifiers": {"mandatory": ["left_gui"]}},
            "to": {"key_code": "2", "modifiers": ["left_control"]}
        }, {
            "type": "basic",
            "from": {"key_code": "3", "modifiers": {"mandatory": ["left_gui"]}},
            "to": {"key_code": "3", "modifiers": ["left_control"]}
        }, {
            "type": "basic",
            "from": {"key_code": "4", "modifiers": {"mandatory": ["left_gui"]}},
            "to": {"key_code": "4", "modifiers": ["left_control"]}
        }]
    }, {
        "description": "Use Command+Up Arrow to call Mission Control",
        "manipulators": [{
            "type": "basic",
            "from": {"key_code": "up_arrow", "modifiers": {"mandatory": ["left_gui"]}},
            "to": {"key_code": "up_arrow", "modifiers": ["left_control"]}
        }]
    }, {
        "description": "Use Option+Number to switch tab in Firefox/Chrome",
